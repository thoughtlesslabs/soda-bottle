pico-8 cartridge // http://www.pico-8.com
version 32
__lua__
-- bottle pop
-- a thoughtless labs experiment

function _init()
    power = 0
    power_max = 100
    x = 0
    y = 0
end

function _update()
    if btn(4) then
        power += 1
        bottle_shake()
    end
    if power == power_max then 
        bottle_explode()
    end
end

function _draw()
    cls(12)
    circfill(x+50,y+50,4)
    print(power)
end

function bottle_shake()
    x = rnd(2)
    y = rnd(2)
end

function bottle_explode()
    power = 0
end


